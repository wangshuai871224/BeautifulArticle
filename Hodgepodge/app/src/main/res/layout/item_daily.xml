<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_products_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t_relative_layout_height"
            android:layout_marginTop="@dimen/t_margin_top"
            android:background="@drawable/border"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/tv_products_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b4b4b4"
                android:textSize="@dimen/t_text_size"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_ll_height"
        android:background="@color/t_black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_designer_avatar_url"
            android:layout_width="@dimen/t_hand_pic_width"
            android:layout_height="@dimen/t_hand_pic_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/t_start"/>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daily_designer_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#d2d2d2"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/daily_designer_label"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#868686"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:src="@mipmap/cry"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="#919191"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="#fff"
            android:src="@mipmap/smile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
</LinearLayout>